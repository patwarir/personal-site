{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": "./src/",
    "paths": {
      "@root/*": [
        "./*",
      ],
    },
    "removeComments": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "incremental": true,
    "strict": true,
  },
  "include": [
    "./next-env.d.ts",
    "./src/",
  ],
  "exclude": [
    "./node_modules/"
  ],
}
